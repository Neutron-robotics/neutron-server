{
  "name": "neutron-server",
  "version": "1.0.0",
  "description": "The server component powering the neutron platform",
  "keywords": [
    "TypeScript",
    "express",
    "nodejs",
    "eslint"
  ],
  "author": "Hugo PERIER",
  "main": "dist/index.js",
  "scripts": {
    "eslint": "eslint src/server.ts",
    "postinstall": "chmod +x ./scripts/dev.sh",
    "setup-actions": "chmod +x ./scripts/setup-github-actions.sh; ./scripts/setup-github-actions.sh",
    "build": "tsc",
    "lint": "./node_modules/eslint/bin/eslint.js  src --ext .ts",
    "dev": "./scripts/dev.sh",
    "dev-server": "NODE_ENV=development nodemon",
    "ts-node-server": "ts-node src/server.ts",
    "start": "node dist/src/server.js",
    "test": "jest",
    "test:verbose": "jest --verbose --runInBand --silent",
    "fix-lint": "./node_modules/eslint/bin/eslint.js  src --ext .ts --fix"
  },
  "dependencies": {
    "@neutron-robotics/neutron-core": "^1.3.3",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.0",
    "body-parser": "1.20.2",
    "compression": "1.7.4",
    "cors": "^2.8.5",
    "dotenv": "16.0.3",
    "express": "^4.19.2",
    "joi": "17.9.1",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.30.1",
    "mongoose": "^7.6.12",
    "mongoose-autopopulate": "^1.0.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.12",
    "winston": "3.8.2",
    "winston-logstash": "^1.2.1",
    "winston-transport": "^4.5.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "4.17.17",
    "@types/hapi__joi": "17.1.9",
    "@types/jest": "29.5.0",
    "@types/js-yaml": "^4.0.5",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "18.15.11",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "2.0.12",
    "@types/swagger-ui-express": "4.1.3",
    "@typescript-eslint/eslint-plugin": "5.58.0",
    "@typescript-eslint/parser": "5.58.0",
    "eslint": "8.38.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.27.5",
    "jest": "29.5.0",
    "jest-express": "1.12.0",
    "nodemon": "^3.1.2",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  },
  "license": "MIT"
}
